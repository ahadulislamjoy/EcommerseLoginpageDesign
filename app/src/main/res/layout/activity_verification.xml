<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Verification"
    android:orientation="vertical">
    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/verification"
        />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OTP Verification"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="please enter the otp to you"
        android:textSize="20dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:textColor="@color/white"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginRight="5dp"
            android:id="@+id/input_number1_id"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:maxLength="1"
            android:inputType="number"
            android:layout_width="40dp"
            android:layout_height="46dp"/>
        <EditText
            android:textColor="@color/white"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginRight="5dp"
            android:id="@+id/input_number2_id"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:maxLength="1"
            android:inputType="number"
            android:layout_width="40dp"
            android:layout_height="46dp"/>
        <EditText
            android:textColor="@color/white"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginRight="5dp"
            android:id="@+id/input_number3_id"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:maxLength="1"
            android:inputType="number"
            android:layout_width="40dp"
            android:layout_height="46dp"/>
        <EditText
            android:textColor="@color/white"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginRight="5dp"
            android:id="@+id/input_number4_id"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:maxLength="1"
            android:inputType="number"
            android:layout_width="40dp"
            android:layout_height="46dp"/>
        <EditText
            android:textColor="@color/white"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginRight="5dp"
            android:id="@+id/input_number5_id"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:maxLength="1"
            android:inputType="number"
            android:layout_width="40dp"
            android:layout_height="46dp"/>
        <EditText
            android:textColor="@color/white"
            android:background="@drawable/ic_launcher_background"
            android:layout_marginRight="5dp"
            android:id="@+id/input_number6_id"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"
            android:maxLength="1"
            android:inputType="number"
            android:layout_width="40dp"
            android:layout_height="46dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/resend_otp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="175dp"
        android:text="RESEND OTP AGAIN" />

    <Button
        android:id="@+id/submit_otp"
        android:layout_marginTop="30dp"
        android:text="SUBMIT"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"/>

</LinearLayout>